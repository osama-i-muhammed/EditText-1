                    android:textColor="#222"
                    android:textSize="20dp" />

                <Spinner

                    android:id="@+id/spinarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
