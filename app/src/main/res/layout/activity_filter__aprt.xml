                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_rent"
                    android:checked="false"
                    android:textOff="@string/toggle_rent"
                    android:textOn="@string/toggle_rent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="1110dp" />

                <ToggleButton
                    android:id="@+id/toggleSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_sale"
                    android:checked="true"
                    android:text="ToggleButton"
                    android:textOff="@string/toggle_sale"
                    android:textOn="@string/toggle_sale"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="1110dp" />
